! disable Perl extensions
URxvt.perl-ext:
URxvt.perl-ext-common:

! icon
URxvt*iconFile: /usr/share/icons/HighContrast/256x256/apps/utilities-terminal.png

! movement
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! scrolling
URxvt.scrollBar: False

! font
URxvt.font:        xft:UbuntuMono\ Nerd\ Font\ Mono:style=Regular:size=14
!URxvt.font:        xft:Ubuntu\ Mono\ derivative\ Powerline:size=13
!URxvt.font:        xft:Roboto\ Mono\ for\ Powerline:size=14
!URxvt.font:        xft:Inconsolata\ for\ Powerline:size=14
!URxvt.font:        xft:Iosevka Medium:size=12
URxvt.letterSpace: -1

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
! Xft.dpi: 81
Xft.dpi: 163
Xcursor.theme: default
Xcursor.size: 48

! color scheme: Tango
! special
*.foreground:   #fcfcfc
*.background:   #000000
*.cursorColor:  #fcfcfc

! black
*.color0:       #2e3436
*.color8:       #555753

! red
*.color1:       #cc0000
*.color9:       #ef2929

! green
*.color2:       #4e9a06
*.color10:      #8ae234

! yellow
*.color3:       #c4a000
*.color11:      #fce94f

! blue
*.color4:       #3465a4
*.color12:      #729fcf

! magenta
*.color5:       #75507b
*.color13:      #ad7fa8

! cyan
*.color6:       #06989a
*.color14:      #34e2e2

! white
*.color7:       #d3d7cf
*.color15:      #eeeeec
